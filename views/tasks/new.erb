<h1>Add Task</h1>
<form action="/tasks" method="POST">
  <label for="">Task Name: </label>
  <input type="text" name="task_name">

  <label for="">Task Instructions: </label>
  <input type="text" name="task_instructions">
  
    <label for="">Assign to user:</label>
     <select name="assign_task_to">
         <% all_users.each do |user| %>
        
          <option value="<%= user['first_name'] %>"><%= user['first_name'] %></option>
      
        <% end %>
      </select>
        <input type="hidden" value="assign_task_to" >
        <button>Add Task</button>
  </form> 
 