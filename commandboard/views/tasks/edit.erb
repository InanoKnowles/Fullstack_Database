<h1>Edit Task</h1>

<form action="/tasks/<%= task['id'] %>" method="POST">
  <input type="hidden" name="_method" value="put">

  <label for="">Task Name: </label>
  <input type="text" name="task_name" value="<%= task['task_name'] %>">

  <label for="">Task Instructions: </label>
  <input type="text" name="task_instructions" value="<%= task['task_instructions'] %>">

  <label for="">Assign Task: </label>
  <input type="text" name="assign_task_to" value="<%= task['assign_task_to'] %>">

  <button>Update Task</button>
</form>